<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cougar Bookstore</title>
    <link href="~/lib2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib2/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    @*<div class="bg-dark text-white p-2">
        <span class="navbar-brand m-lg-2">Cougar Bookstore</span>
    </div>*@

    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">Cougar Bookstore</div>
                <div class="col-3 text-right">
                    <vc:purchase-summary />
                </div>
            </div>
        </div>
    </div>

